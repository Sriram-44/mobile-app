<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"> <!-- Center children horizontally -->

    <!-- Centered TextView for displaying account details -->
    <TextView
        android:id="@+id/accountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Details"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/> <!-- Center text within TextView -->

    <!-- TextView for displaying the user's email -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

    <!-- TextView for displaying the user's username -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

    <!-- TextView for displaying the user's city -->
    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City:"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
