<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg1"
    >

    <TextView
        android:id="@+id/contactInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 6374781499"
        android:textColorLink="@color/linkColor"
        android:layout_below="@id/contactInfoTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:autoLink="phone"
        tools:ignore="HardcodedText"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: sriram04042003@gmail.com"
        android:textColorLink="@color/linkColor"
        android:layout_below="@id/phoneNumberTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:autoLink="email"
        tools:ignore="HardcodedText"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/websiteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web: www.google.com"
        android:textColorLink="@color/linkColor"
        android:layout_below="@id/emailTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        tools:ignore="HardcodedText"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

</RelativeLayout>
